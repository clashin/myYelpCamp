<% layout('layouts/boilerplate') -%>
    <h1>Create Campground</h1>
    <form action="/campgrounds" method="POST">
        <div class="my-2">
            <label for="title">Title</label>
            <input type="text" id="title" name="campgrounds[title]">
        </div>
        <div class="my-2">
            <label for="location">Location</label>
            <input type="text" id="location" name="campgrounds[location]">
        </div>
        <button type="button" class="btn btn-primary mt-2">Create</button>
    </form>
    <footer>
        <a href="/campgrounds" class="text-decoration-none">Go Back</a>
    </footer>
